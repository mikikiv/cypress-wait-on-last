{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!dist", "!node_modules", "!tsconfig.json"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noImplicitAnyLet": "error",
				"noExplicitAny": "off"
			}
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab"
		}
	},
	"javascript": {
		"formatter": { "quoteStyle": "double", "trailingCommas": "all" }
	},
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	}
}
